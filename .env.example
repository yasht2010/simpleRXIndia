PORT=3000

# Admin / auth
ADMIN_USER=admin@example.com
ADMIN_PASS=change-me
ADMIN_PASSCODE=adminpass
REGISTRATION_OTP=2345
SESSION_SECRET=change-me-too

# Supabase (Postgres + session store)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# S3 (audio uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret
AWS_REGION=ap-south-1
S3_BUCKET=your-bucket-name
S3_CLEANUP_MAX_AGE_HOURS=24

# Providers: transcription + LLM
DEEPGRAM_API_KEY=deepgram-key
GEMINI_API_KEY=gemini-key
OPENAI_API_KEY=openai-key
GROQ_API_KEY=groq-key

# Medicine sidecar (FastAPI)
# Run the sidecar locally with: uvicorn search_engine:app --host 0.0.0.0 --port 8000
# Default base is http://127.0.0.1:8000; override if you host elsewhere
MEDICINE_SERVICE_BASE=http://127.0.0.1:8000

# Provider/model overrides (optional)
TRANSCRIPTION_LIVE_PROVIDER=deepgram
TRANSCRIPTION_OFFLINE_PROVIDER=deepgram
# --- 2. Scribe (Raw Transcription -> Logical Sections) ---
SCRIBE_PROVIDER=gemini
# Specific models by provider (Recommended):
SCRIBE_MODEL_GEMINI=gemini-1.5-flash
SCRIBE_MODEL_OPENAI=gpt-4o-mini
SCRIBE_MODEL_GROQ=llama-3.3-70b-versatile
# Generic override (Overwrites matching provider specific):
# SCRIBE_MODEL=gemini-1.5-flash

# --- 3. Format (Logical -> JSON/HTML Schema) ---
FORMAT_PROVIDER=gemini
FORMAT_MODEL_GEMINI=gemini-1.5-flash
FORMAT_MODEL_OPENAI=gpt-4o-mini
FORMAT_MODEL_GROQ=llama-3.3-70b-versatile
# FORMAT_MODEL=gemini-1.5-flash

# --- 4. Review (Final Polish) ---
REVIEW_PROVIDER=openai
REVIEW_MODEL_GEMINI=gemini-1.5-flash
REVIEW_MODEL_OPENAI=gpt-4o-mini
REVIEW_MODEL_GROQ=llama-3.3-70b-versatile
# REVIEW_MODEL=gpt-4o-mini
DEEPGRAM_TRANSCRIPTION_MODEL=nova-2-medical
DEEPGRAM_TRANSCRIPTION_LANGUAGE=en-IN
OPENAI_TRANSCRIBE_MODEL=gpt-4o-transcribe
GROQ_TRANSCRIPTION_MODEL=whisper-large-v3-turbo
GROQ_BASE_URL=https://api.groq.com/openai/v1
